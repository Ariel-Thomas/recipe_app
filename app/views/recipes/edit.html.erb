<h1>Edit Recipe</h1>

<% if flash[:success] %>
  <div class="alert alert-success"><%= flash[:succes] %></div><br>
<% end %>

<div>
  <%= form_for @recipe do |f| %>
    <%= render 'shared/error_messages', object: f.object %>

    <%= f.label :name %>
    <%= f.text_field :name, prompt: @recipe.name %>

    <%= f.label :description %>
    <%= f.text_area :description, prompt: @recipe.description %>

    <%= f.submit "Edit", class: "btn btn-large btn-primary" %>
  <% end %>
</div>