<% provide(:title, @recipe.name) %>
<h1><%= @recipe.name %></h1>

<div>
  <%= @recipe.description %>
</div>

<section>
  <span>
    <%= link_to "edit", edit_recipe_path(@recipe) %>
  </span>
  <span>
    <%= link_to "delete", @recipe, method: :delete, data: { confirm: "You sure?" } %>
  </span>
</section>