<% provide(:title, "Sign Up") %>
<h1><%= @user.username %>'s Profile</h1>

<section>
  <% if !@user.about_me.to_s.empty? %>
    <h3>About Me</h3>
    <p><%= @user.about_me %></p>
  <% end %>
</section>

<section style="position:relative">
  <div class="pull-left" style="width:50%;position:relative">
    <h3>User Recipes (<%= @recipes.count %>)</h3>
    <div id="recipes_list"><%= render 'recipes/list' %><div>
  </div>
</section>

<section class="clear-both">
  <% if can? :update, @user %>
    <span>
      <%= link_to "edit", edit_user_path(@user) %>
    </span>
  <% end %>
</section>